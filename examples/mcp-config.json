{
  "mcpServers": {
    "grafana-observer": {
      "command": "npx",
      "args": ["-y", "grafana-observer-mcp"],
      "env": {
        "GRAFANA_URL": "https://your-grafana-instance.com",
        "GRAFANA_EMAIL": "your-email@example.com",
        "GRAFANA_PASSWORD": "your-password",
        "GRAFANA_DEFAULT_DATASOURCE_UID": "your-datasource-uid",
        "GRAFANA_ORG_ID": "1"
      }
    }
  }
}

